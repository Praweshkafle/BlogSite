@{
}
@model ChangePasswordDto
<header class="masthead" style="background-image: url('assets/img/home-bg.jpg'); height:100px">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h2>Change Password</h2>
                    <span class="subheading">Update your password once in a while to secure your account.</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="col-md-6 offset-md-3">
    <span class="anchor" id="formChangePassword"></span>
    <hr class="mb-5">

    <!-- form card change password -->
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h3 class="mb-0">Change Password</h3>
        </div>
        <div class="card-body">
            <form method="post" action="/changepassword" class="form" role="form" autocomplete="off">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.Partial("message")
                <div class="form-group">
                    @Html.TextBoxFor(a => a.OldPassword, new {@type="password", @class = "form-control", @required="required"})
                    @Html.LabelFor(a => a.OldPassword, "Current Password", new { @class = "form-label" })
                    <p class="text-danger">@Html.ValidationMessageFor(a => a.OldPassword)</p>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(a => a.NewPassword, new {@type="password", @class = "form-control", @required="required"})
                    @Html.LabelFor(a => a.NewPassword, "New Password", new { @class = "form-label" })
                    <p class="text-danger">@Html.ValidationMessageFor(a => a.NewPassword)</p>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(a => a.ConfirmPassword, new {@type="password", @class = "form-control", @required="required"})
                    @Html.LabelFor(a => a.ConfirmPassword, "Verify Password", new { @class = "form-label" })
                    <p class="text-danger">@Html.ValidationMessageFor(a => a.ConfirmPassword)</p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg float-right">Save</button>
                </div>
            </form>
        </div>
    </div>
    <!-- /form card change password -->

</div>